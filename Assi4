#include <iostream>

//q 1

int cYesVotes = 0, cNoVotes = 0, i = 0, voteCount = 0;
char c;

void promptVotes() {
	std::cout << "Enter a string of votes: ";
}

void getVotes() {
	std::cin.get(c);
}

void printYesVotes() {
	std::cout << "No. of YES votes = " << cYesVotes;

}

void printYesVoteStars() {
	std::cout << " * ";
}

void printNoVotes() {
	std::cout << "No. of NO votes = " << cNoVotes;
}

void printNoVoteStars() {
	std::cout << " * ";
}

int main() {

	_asm {
			call promptVotes;
		
		whileLoop:
			
			call getVotes;
			cmp c, '\n';
			je ForLoop;

			cmp c, 'y';
			jne noVote;

		yesVote:
			inc cYesVotes;
			inc voteCount;
			jmp whileLoop;

		noVote:
			inc cNoVotes;
			inc voteCount;
			jmp whileLoop;

		call printYesVotes;
		mov eax, voteCount;

		Forloop:
			cmp i, eax;
			jge done;

			call printYesVoteStars;
			inc i;
			jmp Forloop;

		done:

	}

	return 0;
	
}

/*------------------------OUTPUT----------------------------

Enter a string of votes: ynnyynyyyy
No. of YES votes = 7 *  *  *  *  *  *  *
No. of NO votes = 3 *  *  *
Press any key to continue . . .

----------------------------------------------------------------*/

